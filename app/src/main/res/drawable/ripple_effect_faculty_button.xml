<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/facultycolorPrimaryDark"
    tools:targetApi="lollipop">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/facultycolorPrimaryDark" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/facultytextMenu"
                android:startColor="@color/facultytextMenu"
                android:type="linear" />
            <item
                android:id="@android:id/background"
                android:drawable="@color/facultytextMenu" />
        </shape>
    </item>
</ripple>