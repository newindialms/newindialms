<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="edu.thapar.newindialms.StudentPicProgram">

    <include
        android:id="@+id/studentpic_toolbar"
        layout="@layout/studentpic_toolbar"/>
    <TextView
        android:id="@+id/Studentpic_programcorecourses_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/studentpic_toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/showfeedback_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Studentpic_programcorecourses_title"
        >
    <ListView
        android:id="@+id/studentpic_programscreencorecourselist_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Studentpic_programcorecourses_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="10.0sp" />
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
