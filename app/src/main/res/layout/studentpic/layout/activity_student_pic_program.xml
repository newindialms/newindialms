<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="edu.thapar.newindialms.StudentPicProgram">

    <include
        android:id="@+id/studentpic_toolbar"
        layout="@layout/studentpic_toolbar"></include>

    <TextView
        android:id="@+id/Studentpic_program_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/studentpic_toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/studentpic_programtitle"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/studentpic_programlist"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Studentpic_program_title" />
</RelativeLayout>
