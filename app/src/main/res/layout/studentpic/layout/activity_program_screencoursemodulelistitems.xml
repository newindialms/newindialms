<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_button"
    android:padding="15dp">


        <TextView
            android:id="@+id/studentpic_programscreencoursemodulelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/coursename"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/studentpic_programscreencoursemodulelistcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentpic_programscreencoursemodulelist"
            android:padding="10dp"
            android:text="@string/coursecode"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/studentPicarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/studentpic_programscreencoursemodulelistcode"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/next"
            app:srcCompat="@drawable/ic_right" />

</RelativeLayout>
