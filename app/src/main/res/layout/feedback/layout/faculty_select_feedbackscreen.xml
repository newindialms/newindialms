<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    android:orientation="vertical">

    <include
        android:id="@+id/facultycourselist_toolbar"
        layout="@layout/facultycourselist_toolbar"></include>

    <TextView
        android:id="@+id/faculty_select_feedbackscreen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/faculty_select_feedbackscreen_title"
        android:textAlignment="center"
        android:textColor="@color/facultytextMenu"
        android:textSize="24sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/faculty_select_feedbackscreen_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>