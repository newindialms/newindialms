<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/addfeedbacktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_toolbar"
        android:layout_marginTop="10dp"
        android:text="@string/addfeedbacktitle"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addfeedbackmaintitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/addfeedbackdescription"
        android:layout_alignLeft="@+id/addfeedbackdescription"
        android:layout_alignRight="@+id/addfeedbackdescription"
        android:layout_alignStart="@+id/addfeedbackdescription"
        android:layout_below="@+id/addfeedbacktitle"
        android:layout_marginTop="30dp"
        android:background="@color/textColor"
        android:ems="10"
        android:hint="@string/addfeedbackmaintitle"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/textHintColor"
        android:textColorHint="@color/textHintColor" />

    <EditText
        android:id="@+id/addfeedbackdescription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addfeedbackmaintitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="63dp"
        android:background="@color/textColor"
        android:ems="10"
        android:hint="@string/addfeedbackdescription"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/textHintColor"
        android:textColorHint="@color/textHintColor" />

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addfeedbackdescription"
        android:layout_alignLeft="@+id/addfeedbackdescription"
        android:layout_alignRight="@+id/addfeedbackdescription"
        android:layout_alignStart="@+id/addfeedbackdescription"
        android:layout_below="@+id/addfeedbackdescription"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addfeedbacktypetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/addfeedbacktypetext"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addfeedbackspinner"
            style="@style/mySpinnerItemStyle"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/addfeedbacktypetext"
            android:layout_alignLeft="@+id/addfeedbacktypetext"
            android:layout_alignRight="@+id/addfeedbacktypetext"
            android:layout_alignStart="@+id/addfeedbacktypetext"
            android:layout_below="@+id/addfeedbacktypetext"
            android:layout_marginTop="13dp"
            android:entries="@array/feedbacktype"/>

    </RelativeLayout>

    <Button
        android:id="@+id/addfeedbacksubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/addfeedbacksubmit"
        android:textColor="@color/textColor"
        android:layout_below="@+id/RelativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>