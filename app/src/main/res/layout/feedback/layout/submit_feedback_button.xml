<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    tools:context="edu.thapar.newindialms.SubmitFeedBackScreen">

    <TextView
        android:id="@+id/submitbuttontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_feedback"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/studentcolorPrimary"/>
    <Button
        android:onClick="submitfeedbackfunction"
        android:id="@+id/SubmitAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/submitbuttontext"
        android:background="@drawable/ripple_effect_student_button"
        android:clickable="true"
        android:text="@string/SubmitAttendance"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="14sp" />
</RelativeLayout>