<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    tools:context="edu.thapar.newindialms.MyFeedbackEnrolledCourse">

    <include
        android:id="@+id/student_enroll_toolbar"
        layout="@layout/student_enroll_toolbar"/>

    <TextView
        android:id="@+id/myfeedbackenrolledcourses_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_enroll_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="@string/myfeedback_screen_title"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimaryDark"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/myfeedback_rollno_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myfeedbackenrolledcourses_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myfeedbackenrolledcourses_title_rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/myfeedback_screen_title_rollno"
            android:textAlignment="center"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/myfeedback_rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint=""
            android:padding="10dp"
            android:textAlignment="center"
            android:textColorHint="@color/studentcolorPrimaryDark"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <Button
        android:id="@+id/myfeedback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/student_rounded_button"
        android:text="@string/myfeedback_screen_button"
        android:textColor="@color/studentcolorPrimaryDark" />

</RelativeLayout>
