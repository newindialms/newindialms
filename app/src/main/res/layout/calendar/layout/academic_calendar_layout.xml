<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <include
        android:id="@+id/calendar_toolbar"
        layout="@layout/calendar_toolbar"
        ></include>
    <TextView
        android:id="@+id/calendar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/calendar_title"
        android:textColor="@color/textColor"
        android:textSize="24dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/send_token_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:text="Send Token"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/open_calendar_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:text="Show Calendar"
            android:textColor="@color/textColor" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/title_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView4"
            android:layout_margin="10dp"
            android:background="@drawable/white_background"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/textHintColor"
            android:textColorHint="@color/textHintColor" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_notification"
            android:layout_margin="10dp"
            android:text="Message"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/message_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_margin="10dp"
            android:background="@drawable/white_background"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:paddingLeft="10dp"
            android:textColor="@color/textHintColor"
            android:textColorHint="@color/textHintColor" />

        <Button
            android:id="@+id/sendnotification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:padding="5dp"
            android:text="Send Notification"
            android:textColor="@color/textColor"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>