<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="edu.thapar.newindialms.ViewStudentsTab$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/studentview_title">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/student_spinner_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="53dp"
                android:layout_weight="0.34"
                android:text="Select the Specialization"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/specialization_spinner"
                style="@style/mySpinnerItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/student_spinner_specialization"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/student_spinner_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="53dp"
                android:layout_weight="0.34"
                android:text="Select the Program"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/program_spinner"
                style="@style/mySpinnerItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/student_spinner_program"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/student_spinner_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="53dp"
                android:layout_weight="0.34"
                android:text="Select the Year"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/joining_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/student_spinner_year"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <Button
            android:id="@+id/spinner_show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Show"
            android:textColor="@color/textColor"
            android:layout_gravity="center_horizontal"
            android:onClick="SpinnerStudentList"/>
    </LinearLayout>


</RelativeLayout>