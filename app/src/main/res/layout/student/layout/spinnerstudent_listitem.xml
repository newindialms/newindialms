<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/spinner_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollfirstname"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spinner_rollno"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:text="@string/myfeedback_screen_title_rollno"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/mail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/email_button"
                    app:srcCompat="@drawable/envelope" />

            </LinearLayout>

            <TextView
                android:id="@+id/spinner_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registration_email"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />



        </LinearLayout>
</LinearLayout>