<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_show_single_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <include
        android:id="@+id/toolbar_delete_students"
        layout="@layout/enroll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delete_student_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_delete_students"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/delete_student_records"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/delete_student_records"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textRollno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textRollno"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textFirstName"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textPhone"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

        </LinearLayout>
        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/ripple_effect_program_button"
            android:clickable="true"
            android:text="@string/buttonDelete"
            android:textColor="@color/textColor" />
    </LinearLayout>


</RelativeLayout>