<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button">

        <TextView
            android:id="@+id/removecourselist_name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:width="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="name"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/removecourselist_code"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/removecourselist_name"
            android:layout_weight="1"
            android:width="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Code"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/studentdeletearrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/removecourselist_name"
            android:layout_alignRight="@+id/removecourselist_name"
            android:layout_alignTop="@+id/removecourselist_name"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_delete" />
    </RelativeLayout>


</LinearLayout>
