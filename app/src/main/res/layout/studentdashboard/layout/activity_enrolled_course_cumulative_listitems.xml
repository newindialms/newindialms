<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/enrollcourse_cumulative_display_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/total"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enrollcourse_cumulative_display_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/present_status"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enrollcourse_cumulative_display_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/absent_status"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enrollcourse_cumulative_display_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="18dp"
            android:text="@string/percentage"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>