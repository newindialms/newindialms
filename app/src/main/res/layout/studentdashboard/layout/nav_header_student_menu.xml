<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_faculty_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/studentcolorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/student_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/new_india_lms"
            android:textColor="@color/studentwindowBackground"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_toolbar_title"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/student_name"
            android:textColor="@color/studentwindowBackground"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/student_toolbar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_toolbar_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/menu_studentid"
            android:textColor="@color/studentwindowBackground"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
