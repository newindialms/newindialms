<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textColor"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/student_rounded_button">

        <TextView
            android:id="@+id/enrolledcourselist_name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:width="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Enrolled Course"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/studentPicarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/enrolledcourselist_name"
            android:layout_alignRight="@+id/enrolledcourselist_name"
            android:layout_alignTop="@+id/enrolledcourselist_name"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/student_right_arrow" />
    </RelativeLayout>


</LinearLayout>
