<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/studentprofile_toolbar"
        layout="@layout/student_enroll_toolbar"/>


    <TextView
        android:id="@+id/course_details_coursename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="@string/course_details_coursename"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimaryDark"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/course_details_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_details_coursename"
        android:layout_marginTop="20dp"
        android:padding="15dp" />

</LinearLayout>
