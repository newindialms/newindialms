<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:paddingBottom="10dp">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/enrollcourse_daywise_display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Date"
                android:textAllCaps="true"
                android:textColor="@color/studentcolorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enrollcourse_daywise_display_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/enrollcourse_daywise_display_date"
                android:padding="10dp"
                android:text="Time"
                android:textAllCaps="true"
                android:textColor="@color/studentcolorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enrollcourse_daywise_display_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/enrollcourse_daywise_display_time"
                android:background="@color/textColor"
                android:padding="10dp"
                android:text="status"
                android:textAllCaps="true"
                android:textColor="@color/studentcolorPrimaryDark"
                android:textSize="18sp" />
        </TableRow>
    </RelativeLayout>


</LinearLayout>