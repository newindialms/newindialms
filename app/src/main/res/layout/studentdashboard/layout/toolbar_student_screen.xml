<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/faculty_toolbar"
android:background="@color/studentcolorPrimary"
app:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/faculty_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/new_india_lms"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/faculty_toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/faculty_toolbar_title"
            android:layout_marginBottom="5dp"
            android:text="@string/faculty_name"
            android:textColor="@color/studenttextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/faculty_toolbar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/enrollemployeeid"
            android:textColor="@color/studenttextColor"
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>