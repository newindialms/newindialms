<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/student_rounded_button">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:stretchColumns="1">


            <TableRow>

                <TextView
                    android:id="@+id/faculty_firstyear_name_label"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:text="Professor"
                    android:textColor="@color/studenttextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/faculty_firstyear_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:padding="5dp"
                    android:text="First Name"
                    android:textColor="@color/studentcolorPrimary" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/faculty_firstyear_phone_label"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:text="Phone"
                    android:textColor="@color/studenttextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/faculty_firstyear_phone"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:padding="5dp"
                    android:text="Phone Number"
                    android:textColor="@color/studentcolorPrimary" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/faculty_firstyear_email_label"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:text="Email"
                    android:textColor="@color/studenttextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/faculty_firstyear_email"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:padding="5dp"
                    android:text="EmailAdress"
                    android:textColor="@color/studentcolorPrimary" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/faculty_firstyear_credits_label"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:text="No of Credits"
                    android:textColor="@color/studenttextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/faculty_firstyear_credits"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:padding="5dp"
                    android:text="Credits Value"
                    android:textColor="@color/studentcolorPrimary" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>