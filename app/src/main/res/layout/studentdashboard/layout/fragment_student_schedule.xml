<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    tools:context="edu.thapar.newindialms.StudentPicProgram">

    <TextView
        android:id="@+id/student_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/faculty_schedule_title"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/faculty_schedule_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/student_schedule_title"
        android:text="@string/faculty_schedule_Month"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimary"
        android:textSize="24sp" />

    <solar.blaz.date.week.WeekDatePicker
        android:id="@+id/schedule_calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:textColor="@color/studenttextHintColor"
        app:wdp_labelTextSize="12sp"
        app:wdp_labelPadding="5dp"
        app:wdp_dayBackground="@drawable/date_picker_day_bg_student"
        app:wdp_indicatorDrawable="@drawable/date_picker_indicator_student"
        app:wdp_firstDayOfWeek="monday"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/ScheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_student_button"
        android:clickable="true"
        android:textColor="@color/textColor"
        android:text="@string/ScheduleButton"
        android:layout_below="@+id/schedule_calendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />
</RelativeLayout>
