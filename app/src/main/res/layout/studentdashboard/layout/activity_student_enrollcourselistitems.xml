<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/student_rounded_button">

        <TextView
            android:id="@+id/studentenrollcourse_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Coursename"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/studentenrollcourse_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/studentenrollcourse_name"
            android:paddingLeft="10dp"
            android:text="CourseCode"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/studentenrollcourse_faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/studentenrollcourse_code"
            android:paddingLeft="10dp"
            android:text="CourseFaculty"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/studentenrollcourse_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/studentenrollcourse_faculty"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="CourseCredits"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/studentenrollcourse_code"
            android:layout_alignBottom="@+id/studentenrollcourse_code"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="" />


    </RelativeLayout>
</LinearLayout>
