<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/replace_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/calendar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/course_schedule_select"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/schedule_image"
        android:contentDescription="@string/homescreen_calendar"
        android:layout_below="@+id/calendar_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/calendar_button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_button"
        android:onClick="GoToFirstYearSchedule"
        android:padding="25dp"
        android:text="First Year"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/calendar_button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calendar_button_first"
        android:layout_alignBottom="@+id/calendar_button_first"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/calendar_button_first"
        android:layout_toRightOf="@+id/calendar_button_first"
        android:background="@drawable/rounded_button"
        android:onClick="GoToSecondYearSchedule"
        android:padding="25dp"
        android:text="Second Year"
        android:textColor="@color/textColor" />
</RelativeLayout>