<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="edu.thapar.newindialms.ProgramManagerStudentPic">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/studentpic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/studentpic_title"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/student_PicProgram"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/studentpic_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/rounded_button"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:text="@string/studentpic_program"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/studentPicarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_right"
        android:contentDescription="@string/next"
        android:layout_alignTop="@+id/student_PicProgram"
        android:layout_alignRight="@+id/student_PicProgram"
        android:layout_alignEnd="@+id/student_PicProgram"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>
