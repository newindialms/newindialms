<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/replace_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/CourselistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/cardviewCourselistTitle"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="Course List" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/schedule_image"
        android:contentDescription="@string/homescreen_calendar"
        android:layout_below="@+id/calendar_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/calendar_button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/ripple_effect_program_button"
        android:clickable="true"
        android:onClick="GoToFirstYearCourses"
        android:padding="25dp"
        android:text="@string/first_year"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/calendar_button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calendar_button_first"
        android:layout_alignBottom="@+id/calendar_button_first"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/calendar_button_first"
        android:layout_toRightOf="@+id/calendar_button_first"
        android:background="@drawable/ripple_effect_program_button"
        android:clickable="true"
        android:onClick="GoToSecondYearCourses"
        android:padding="25dp"
        android:text="@string/second_year"
        android:textColor="@color/textColor" />
</RelativeLayout>