<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_show_single_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/toolbar_delete_faculty"
        layout="@layout/facultycourselist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delete_faculty_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_delete_faculty"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/delete_faculty_records"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/delete_faculty_records"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textFirstName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textRollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textRollno"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textDesignation"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDeleteFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:text="@string/buttonDelete"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</RelativeLayout>