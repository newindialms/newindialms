<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button">

        <TextView
            android:id="@+id/faculty_text_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:text="@string/faculty_name"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/facultyrollno_text_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/faculty_text_view"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:text="@string/faculty_rollno"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/facultyCode_text_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/facultyrollno_text_view"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:text="@string/faculty_code"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/facultyspecialization_text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/facultyCode_text_view"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="@string/faculty_specialization"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />



        <ImageView
            android:id="@+id/facultydeletebin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/facultyrollno_text_view"
            android:layout_alignRight="@+id/facultyrollno_text_view"
            android:layout_alignTop="@+id/facultyrollno_text_view"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/delete_faculty_records"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>
</LinearLayout>
