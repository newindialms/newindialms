<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1">

    <include
        android:id="@+id/toolbar_all_notiifcation"
        layout="@layout/notification_toolbar"/>

    <TextView
        android:id="@+id/notification_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/notification_email_title"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_email_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notification_email_subject"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1.32"
                android:background="@drawable/white_background"
                android:ems="10"
                android:hint="@string/subject"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/textHintColor"
                android:textColorHint="@color/textHintColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.71"
            android:orientation="vertical">

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_background"
                android:ems="10"
                android:hint="@string/message"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textColor="@color/textHintColor"
                android:textColorHint="@color/textHintColor" />

        </LinearLayout>

        <Button
            android:id="@+id/notification_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.71"
            android:background="@drawable/rounded_button"
            android:text="@string/notification_email_button"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</LinearLayout>