<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_student_attendance"
        layout="@layout/student_enroll_toolbar"/>

    <TextView
        android:id="@+id/detailed_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/faculty_notificationscreen_msgtitle"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailed_notification_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/faculty_notificationscreen_msg"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/detailed_notification_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/faculty_notificationscreen_msgtime"
        android:textAlignment="center"
        android:textColor="@color/studentcolorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>