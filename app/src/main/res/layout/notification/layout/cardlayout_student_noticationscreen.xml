<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/student_rounded_button"
        android:padding="8dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/student_notificationscreen_msgtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/student_notificationscreen_msgtitle"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/student_notificationscreen_msgtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_notificationscreen_msgtitle"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/student_notificationscreen_msgtime"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/studentcolorPrimaryDark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/student_notificationscreen_msgbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_notificationscreen_msgtime"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/studentcolorPrimary"
            android:text="@string/student_notificationscreen_msgbutton" />

    </RelativeLayout>

</LinearLayout>