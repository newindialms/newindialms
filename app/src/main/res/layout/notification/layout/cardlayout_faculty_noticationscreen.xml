<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/faculty_rounded_button"
            android:padding="8dp"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/faculty_notificationscreen_msgtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/faculty_notificationscreen_msgtitle"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/facultytextMenu"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/faculty_notificationscreen_msgtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/faculty_notificationscreen_msgtitle"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/faculty_notificationscreen_msgtime"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/facultytextMenu"
                android:textStyle="bold" />

            <Button
                android:id="@+id/faculty_notificationscreen_msgbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/faculty_notificationscreen_msgtime"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/facultycolorPrimary"
                android:gravity="center"
                android:text="@string/faculty_notificationscreen_msgbutton" />

        </RelativeLayout>

</LinearLayout>