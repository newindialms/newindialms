<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/faculty_rounded_button"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_rating_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/questions"
            android:textAlignment="center"
            android:textColor="@color/facultycolorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_rating_questions"
            android:text="@string/average"
            android:textAlignment="center"
            android:textColor="@color/facultytextMenu"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/median"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/average"
            android:text="@string/median"
            android:textAlignment="center"
            android:textColor="@color/facultytextMenu"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>