<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/textColor"
        android:paddingBottom="20dp">


        <TextView
            android:id="@+id/faculty_courselist_attendance_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:text="name"
            android:textAllCaps="true"
            android:textColor="@color/Menu"
            android:textSize="18sp"
            android:layout_below="@+id/faculty_courselist_display_status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/faculty_courselist_attendance_display_rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rollno"
            android:textAllCaps="true"
            android:textColor="@color/Menu"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/faculty_courselist_attendance_display_name"
            android:layout_alignStart="@+id/faculty_courselist_attendance_display_name"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/faculty_courselist_display_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textColor="@color/Menu"
            android:textSize="18sp"
            android:background="@color/textColor"
            android:text="status" />

    </RelativeLayout>


</LinearLayout>