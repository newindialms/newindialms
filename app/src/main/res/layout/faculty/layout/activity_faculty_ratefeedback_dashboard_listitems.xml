<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_rating_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/facultycolorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/submitfeedbackscreenlist_ratebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_rating_questions"
            android:isIndicator="true"
            android:numStars="5"
            android:scaleX=".7"
            android:scaleY=".7"
            android:theme="@style/RatingBar"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/enrollcourse_daywise_display_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submitfeedbackscreenlist_ratebar"
            android:padding="10dp"
            android:text="@string/date"
            android:textAllCaps="true"
            android:textColor="@color/facultytextMenu"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enrollcourse_daywise_display_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enrollcourse_daywise_display_date"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:padding="10dp"
            android:text="@string/time"
            android:textAllCaps="true"
            android:textColor="@color/facultytextMenu"
            android:textSize="18sp" />


    </RelativeLayout>


</LinearLayout>