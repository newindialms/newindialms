<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_rating_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/facultycolorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.like.LikeButton
            android:id="@+id/like_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_rating_questions"
            android:visibility="gone"
            app:icon_size="25dp"
            app:icon_type="thumb" />

        <ImageView
            android:id="@+id/dislikeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_rating_questions"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/dislike"
            android:src="@drawable/dislike_grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/enrollcourse_daywise_display_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dislikeButton"
            android:layout_alignStart="@+id/dislikeButton"
            android:layout_below="@+id/dislikeButton"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:padding="10dp"
            android:text="@string/date"
            android:textAllCaps="true"
            android:textColor="@color/facultytextMenu"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enrollcourse_daywise_display_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dislikeButton"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp"
            android:padding="10dp"
            android:text="@string/time"
            android:textAllCaps="true"
            android:textColor="@color/facultytextMenu"
            android:textSize="18sp" />


    </RelativeLayout>


</LinearLayout>