<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textColor"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/facultycolorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/textColor"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/faculty_cardviewCourselistTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/faculty_cardviewCourselistTitle"
                android:textAllCaps="true"
                android:textColor="@color/facultyMenu"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/faculty_courselist_rightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:background="@color/textColor"
                app:srcCompat="@drawable/faculty_rightarrow" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>