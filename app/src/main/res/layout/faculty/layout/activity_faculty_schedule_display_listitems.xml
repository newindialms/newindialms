<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/textColor"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/facultycolorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/textColor"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/faculty_scheduledisplay_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/faculty_scheduledisplay_course"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/faculty_scheduledisplay_course"
                android:text="Program"
                android:textAllCaps="true"
                android:textColor="@color/Menu"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/faculty_scheduledisplay_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/faculty_scheduledisplay_program"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="course"
                android:textAllCaps="true"
                android:textColor="@color/Menu"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/faculty_scheduledisplay_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="starttime"
                android:textAllCaps="true"
                android:textColor="@color/Menu"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/faculty_scheduledisplay_endtime"
                android:layout_alignBottom="@+id/faculty_scheduledisplay_endtime"
                android:layout_toRightOf="@+id/faculty_scheduledisplay_program"
                android:layout_toEndOf="@+id/faculty_scheduledisplay_program" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Menu"
                android:text="-"
                android:layout_alignBottom="@+id/faculty_scheduledisplay_endtime"
                android:layout_toRightOf="@+id/faculty_scheduledisplay_endtime"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/faculty_scheduledisplay_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/faculty_scheduledisplay_course"
                android:layout_alignStart="@+id/faculty_scheduledisplay_course"
                android:layout_below="@+id/faculty_scheduledisplay_course"
                android:text="End time"
                android:textAllCaps="true"
                android:textColor="@color/Menu"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>