<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    tools:context="edu.thapar.newindialms.StudentPicProgram">

    <include
        android:id="@+id/facultycourselist_toolbar"
        layout="@layout/facultycourselist_toolbar"></include>

    <TextView
        android:id="@+id/facultycourselist_viewattendance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/facultycourselist_toolbar"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/facultycourselist_viewattendance_title"
        android:textAlignment="center"
        android:textColor="@color/Menu"
        android:textSize="24sp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facultycourselist_viewattendance_title"
        android:layout_centerHorizontal="true"
        android:theme="@style/CalenderViewCustom"
        android:dateTextAppearance="@style/CalenderViewDateCustomText"
        android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"/>

    <TextView
        android:id="@+id/facultycourselist_viewattendance_courses"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/calendarView"
        android:text="@string/facultycourselist_viewattendance_courses"
        android:textAlignment="center"
        android:textColor="@color/Menu"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/facultycourselistspinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/facultycourselist_viewattendance_courses"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:spinnerMode="dialog"
        android:textColor="@color/Menu"
        android:theme="@style/spinnerTheme" />

    <Button
        android:id="@+id/ChooseButton"
        android:layout_below="@+id/facultycourselistspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
